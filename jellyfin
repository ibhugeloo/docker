version: '3'

services:
  jellyfin:
    image: jellyfin/jellyfin:latest
    container_name: jellyfin
    restart: always
    ports:
      - 8096:8096
    volumes:
      - /docker/jellyfin/config:/config
      - /docker/jellyfin/data:/data
      - /docker/jellyfin/media/films:/media/films
      - /docker/jellyfin/media/animes:/media/animes
      - /docker/jellyfin/media/series:/media/series
    environment:
      - TZ=Indian/Reunion #Time Zone
    labels:
      - "com.centurylinklabs.watchtower.enable=true" #Label for watchtower update
